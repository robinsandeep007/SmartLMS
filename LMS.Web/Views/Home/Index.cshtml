@{
    ViewData["Title"] = "Home";
}
<h3>Welcome to SmartLmS</h3>
<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="catalog">
                <h2 class="mdl-card__title-text homeLabel">Catalog</h2>
            </div>
            <div class="mdl-card__supporting-text">
                
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Catalog" asp-action="Index">
                    View Catalog
                </a>
            </div>
        </div>
    </div>
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="courses">
                <h2 class="mdl-card__title-text homeLabel">Courses</h2>
            </div>
            <div class="mdl-card__supporting-text">
               
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Course" asp-action="Index">
                    View Course Index
                </a>
            </div>
        </div>
    </div>
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="Scores">
                <h2 class="mdl-card__title-text homeLabel">Scores</h2>
            </div>
            <div class="mdl-card__supporting-text">
               
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Score" asp-action="Index">
                    View Score Index
                </a>
            </div>
        </div>
    </div>
</div>